{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}


{% block form %}

  {{ govukRadios({
    idPrefix: "special-rules-form-sent",
    name: "special-rules-form-sent",
    classes: "govuk-!-margin-bottom-3",
    fieldset: {
      legend: {
        text: "Has your doctor, consultant or specialist nurse sent your SR1 form to DWP?"
        if locale != 'NI' else "Has your doctor, consultant or specialist nurse sent your SR1 form to DfC?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-4"
      }
    },
    errorMessage: data.validation['special-rules-form-sent'].error,

    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["special-rules-form-sent"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["special-rules-form-sent"] === "no"
      },
      {
        value: "unsure",
        text: "I do not know",
        checked: true if data["special-rules-form-sent"] === "unsure"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}