{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block form %}

  {{ govukRadios({
    idPrefix: "living-in-uk",
    name: "living-in-uk",
    fieldset: {
      legend: {
        text: "Were you living in the United Kingdom (UK) before 1 January 2021?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['living-in-uk'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["living-in-uk"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["living-in-uk"] === "no"
      },
      {
        value: "unsure",
        text: "I do not know",
        checked: true if data["living-in-uk"] === "unsure"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}