{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% extends "v5.11.0-layouts/prototypeLayout.njk" %}

{% block beforeContent %}

  <div class="govuk-phase-banner">
    <p class="govuk-phase-banner__content">
      <strong class="govuk-tag govuk-phase-banner__content__tag">
        Beta
      </strong>
      <span class="govuk-phase-banner__text">
        This is a new service – your <a class="govuk-link" href="#">feedback (opens in a new tab)</a> will help us to improve it.
      </span>
    </p>
  </div>

  <a href="country-outside-uk-duration" class="govuk-back-link">Back</a>

{% endblock %}

{% block form %}

  <h1 class="govuk-heading-l">
    You may not get Attendance Allowance if you have been outside the UK for more than 12 months in the last 3 years
  </h1>

  <p class="govuk-body">
    To be eligible for Attendance Allowance, you must have been in the UK for at least 2 of the last 3 years.
  </p>

  {% if locale == 'NI' %}
    <p class="govuk-body">There are some circumstances under which you may still be able to
    <a class="govuk-link" target=”_blank” href="https://www.nidirect.gov.uk/publications/attendance-allowance-claim-form-and-guidance-notes">claim benefits if you live, move or travel abroad (opens in a new tab)</a>.</p>
    {% else %}
    <p class="govuk-body">There are some circumstances under which you may still be able to
    <a class="govuk-link" target=”_blank” href="https://www.gov.uk/claim-benefits-abroad">claim benefits if you live, move or travel abroad (opens in a new tab)</a>.</p>
  {% endif %}

  <div class="govuk-inset-text">
    If you submit an application for Attendance Allowance, we will contact you for
    more information about where you have travelled to, including dates.
  </div>

  <p class="govuk-body">
    If you think you are eligible, you can <a href="country-outside-uk-benefits" class="govuk-link">continue to apply for Attendance Allowance</a>.
  </p>

{% endblock %}

{% block formButton %}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}