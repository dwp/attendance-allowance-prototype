{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "v5.9.0-layouts/prototypeLayout.njk" %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "#",
    serviceName: "Apply for Attendance Allowance",
    serviceUrl: "#",
    containerClasses: "govuk-width-container",
    useTudorCrown: true
  }) }}
{% endblock %}

{% block backLink %}
{% endblock %}

{% block form %}
  {{ govukRadios({
    idPrefix: "best-describe",
    name: "best-describe",
    fieldset: {
      legend: {
        text: "Which of these best describes you?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['best-describe'].error,
    items: [
      {
        value: "friend",
        text: "I am a friend or family member who is helping the applicant with the application",
        checked: true if data["best-describe"] and data["best-describe"].includes("friend")
      },
      {
        value: "charity",
        text: "I work for a charity or organisation who is helping the applicant with the application",
        checked: true if data["best-describe"] and data["best-describe"].includes("charity")
      },
      {
        value: "powerOfAttorney",
        text: "I have Power of Attorney (Property and Finance)",
        checked: true if data["best-describe"] and data["best-describe"].includes("powerOfAttorney")
      },
      {
        value: "appointed",
        text: "I have been appointed by DWP to deal with benefits of someone who cannot manage their own affairs" if locale != 'NI' else "I am an appointee, appointed by the DfC",
        checked: true if data["best-describe"] and data["best-describe"].includes("appointed")
      },
      {
        value: "appointee",
        text: "I want to be a DWP appointee" if locale != 'NI' else "I want to be an appointee",
        checked: true if data["best-describe"] and data["best-describe"].includes("appointee")
      },
      {
        value: "cab",
        text: "I am a Corporate Acting Body or appointee for the applicant" if locale != 'NI' else "I am a Corporate Acting Body or Corporate Appointee",
        checked: true if data["best-describe"] and data["best-describe"].includes("cab")
      },
      {
        value: "curator",
        text: "I am a curator bonis or judicial factor (under Scottish law)" if locale != 'NI' else "I am a Controller, appointed by the Department of Justice",
        checked: true if data["best-describe"] and data["best-describe"].includes("curator")
      }
    ]
  }) }}
{% endblock %}

